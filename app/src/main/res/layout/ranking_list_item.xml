<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_container"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/text_margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large"
                    android:layout_marginRight="@dimen/text_margin_normal"
                    android:textColor="#bc2121"
                    android:id="@+id/ranking" />

                <ImageView
                    android:layout_width="@dimen/text_normal"
                    android:layout_height="@dimen/text_normal"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/text_margin_normal"
                    android:textColor="#bc2121"
                    android:id="@+id/rank_diff_kigou" />

                <TextView
                    android:id="@+id/rank_new"
                    android:textSize="@dimen/text_normal"
                    android:layout_marginRight="@dimen/text_margin_normal"
                    android:text="New!!"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/prev_rank_text"
                android:textSize="@dimen/text_small"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin_normal"
            android:id="@+id/title"
            android:textSize="@dimen/text_normal"
            android:textColor="#e35b38" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/text_margin_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/text_margin_normal"
                        android:textSize="@dimen/text_small"
                        android:id="@+id/writer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/text_margin_normal"
                        android:id="@+id/genre"
                        android:textSize="@dimen/text_small" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/text_margin_normal"
                        android:id="@+id/ranking_point"
                        android:textColor="#bc2121"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/is_continue"
                        android:textSize="@dimen/text_small"
                        android:layout_marginRight="@dimen/text_margin_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/page"
                        android:textSize="@dimen/text_small"
                        android:layout_marginRight="@dimen/text_margin_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/length"
                        android:textSize="@dimen/text_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_expand"
                style="?android:borderlessButtonStyle"
                android:src="@drawable/ic_expand_more_black_24dp"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/btn_expand_size"
                android:layout_height="@dimen/btn_expand_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/all_story"
            android:layout_marginTop="@dimen/text_margin_normal"
            android:textSize="@dimen/text_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/keyword"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="@dimen/text_margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</layout>